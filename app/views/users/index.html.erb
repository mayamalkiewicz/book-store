<% if logged_in? %>
  <div class="w-full m-auto">
    <div class="flex justify-between items-center mx-auto md:w-2/3 w-full mb-12 bg-gray-100 text-black-500 px-3 py-2 font-medium rounded-3xl mt-20 py-8">
      <h1 class="font-bold text-4xl">Users</h1>
      <div class='flex'>
        <%= link_to 'Sign Up', new_user_path, class: "whitespace-nowrap active:bg-blue-800 hover:bg-blue-700 bg-blue-600 rounded-xl py-3 px-5 text-white block font-medium ml-2" %>
      </div>
    </div>
    <div id="users" class="min-w-full">
      <%= render @users %>
    </div>
  </div>
<% else %>
  <div class="w-full m-auto">
    <div class="mt-40 flex justify-between items-center mx-auto md:w-2/3 w-full mb-12 bg-gray-100 text-black-500 px-3 font-medium rounded-3xl py-32">
      <h1 class="font-bold text-4xl">Users</h1>
      <div class='flex'>
        <%= link_to 'Log In', sessions_login_path, class: "whitespace-nowrap active:bg-blue-800 hover:bg-blue-700 bg-blue-600 rounded-xl py-3 px-5 text-white block font-medium " %>
        <%= link_to 'Sign Up', new_user_path, class: "whitespace-nowrap active:bg-blue-800 hover:bg-blue-700 bg-blue-600 rounded-xl py-3 px-5 text-white block font-medium ml-2" %>
      </div>
    </div>
  </div>
<% end %>
