<div id="<%= dom_id user %>" class= "mx-auto md:w-2/3 w-full mb-12 ">
  <div class="bg-gray-100 rounded-3xl py-6 mb-4 mt-12">
    <div class="flex justify-between">
      <div class="w-2/3">
        <p class="my-5">
          <strong class="py-1 inline-block w-36 rounded-xl px-5 bg-gray-100 w-36">Email:</strong>
          <br>
          <span class="ml-5"><%= user.email %></span>
        </p>
        <p class="my-5">
          <strong class="rounded-xl py-1 inline-block w-36 rounded-xl px-5 bg-gray-100 w-36">Nick name:</strong>
          <br>
          <span class="ml-5"><%= user.nick_name %></span>
        </p>
        <p class="my-5">
          <strong class="rounded-xl py-1 inline-block w-36 rounded-xl px-5 bg-gray-100 w-36">Date of birth:</strong>
          <br>
          <span class="ml-5"><%= user.date_of_birth %></span>
        </p>
        <p class="my-5 ml-5">
          <strong class="rounded-xl py-1 inline-block rounded-xl bg-gray-100 w-36">Description:</strong>
          <br>
          <span class=""><%= user.description %></span>
        </p>
      </div>
      <div class="m-auto w-1/3">
        <%= image_tag("avatar", :class => "object-cover h-48 w-36 rounded-lg") %>
      </div>
    </div>
    <div class="flex justify-start">
      <% if logged_in? && current_user == @user %>
        <%= link_to "Show this user", user, class: "whitespace-nowrap active:bg-gray-200 hover:bg-gray-50 rounded-xl py-3 px-5 bg-white inline-block font-medium ml-4 mt-3" %>
        <%= link_to 'Edit this user', edit_user_path(@user), class: "whitespace-nowrap active:bg-gray-200 hover:bg-gray-50 mt-2 rounded-xl py-3 px-5 bg-white inline-block font-medium" %>
      <% else %>
        <%= link_to "Show this user", user, class: "whitespace-nowrap active:bg-gray-200 hover:bg-gray-50 rounded-xl py-3 px-5 bg-white inline-block font-medium ml-4 mt-3" %>
      <% end %>
    </div>
  </div>
</div>